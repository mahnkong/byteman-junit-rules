<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>

    <container qualifier="jboss" default="true">
        <configuration>
            <property name="jbossHome">build/wildfly-10.1.0.Final</property>
            <property name="javaVmArguments">
                -Djboss.socket.binding.port-offset=1000 -Dbyteman.home=${env.BYTEMAN_HOME} -Dorg.jboss.byteman.transform.all -Djboss.modules.system.pkgs=org.jboss.byteman -Djava.awt.headless=true -javaagent:${env.BYTEMAN_HOME}/lib/byteman.jar=listener:true,boot:${env.BYTEMAN_HOME}/lib/byteman.jar
            </property>
            <property name="managementPort">10990</property>
            <property name="outputToConsole">true</property>
        </configuration>
    </container>

</arquillian>
