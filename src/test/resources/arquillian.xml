<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>

    <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>

    <container qualifier="jboss" default="true">
        <configuration>
            <property name="jbossHome">target/wildfly-8.2.0.Final</property>
            <property name="javaVmArguments">
                -Dbyteman.home=${env.BYTEMAN_HOME} -Dorg.jboss.byteman.transform.all -Djboss.modules.system.pkgs=org.jboss.byteman -Djava.awt.headless=true -Dorg.jboss.byteman.verbose=true -javaagent:${env.BYTEMAN_HOME}/lib/byteman.jar=listener:true,boot:${env.BYTEMAN_HOME}/lib/byteman.jar
            </property>
            <property name="outputToConsole">true</property>
        </configuration>
    </container>

</arquillian>
